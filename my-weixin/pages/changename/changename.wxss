.title-head {
color: #000000;
font-size: 16px;
text-align: center;
padding-top: 12vw;
padding-bottom: 5vw;

}
.title {
color: #000000;
font-size: 16px;
text-align: center;
padding: 10vw 0 0;

}
.title-sex {
color: #000000;
font-size: 16px;
text-align: center;
margin-left: -38rpx;
position: relative;
}
.cu-form-group+.cu-form-group {
border-top: 1rpx solid #eee;
}
.line {
  border-top: 1rpx solid #eee;
  width: 100%;
  height: 1rpx;
}
.cu-form-group {
background-color: var(--white);
padding: 1rpx 30rpx;
display: flex;
align-items: center;
min-height: 100rpx;
justify-content: space-around;
}

.cu-form-group input {
font-size: 30rpx;
color: #555;
padding-right: 20rpx;
}
input {
cursor: auto;
display: block;
height: 1.4rem;
text-overflow: clip;
overflow: hidden;
white-space: nowrap;
font-family: UICTFontTextStyleBody;
min-height: 1.4rem;
margin: 0;
box-sizing: border-box;
}
.cu-capsule {
display: inline-flex;
vertical-align: middle;
box-sizing: border-box;
margin: 0;
}
.radius {
border-radius: 6rpx;
border-top-right-radius: 12rpx;
border-bottom-right-radius: 12rpx;
border-color: #0081ff;
}
.cu-tag .bg-blue{
border-top-left-radius: 6rpx;
border-bottom-left-radius: 6rpx;
}
.cu-capsule .cu-tag {
margin: 0;
}
.cu-tag {
font-size: 24rpx;
vertical-align: middle;
position: relative;
display: inline-flex;
align-items: center;
justify-content: center;
box-sizing: border-box;
padding: 0rpx 16rpx;
height: 48rpx;
font-family: Helvetica Neue, Helvetica, sans-serif;
white-space: nowrap;
margin: 0;

}

.login{
  font-family: "黑体";
  font-size: 50rpx;
  text-align: center;
  align-items: center;
  align-content: center;
  padding-top:60rpx;
  padding-bottom: 30rpx;
}
.cu-form-group .picker {
padding-right: 40rpx;
overflow: hidden;
position: relative;
width: 200rpx;
}
.btn-submit{
  margin-top: 80rpx;
  width:80%;
  background-color: #20CEAC;
  color:#fff;
}


 



