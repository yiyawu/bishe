/* 功能列表 */
.conference_container {
  width: 100%;
  background: #ffffff;
  margin-bottom: 30rpx;
}
.block{
  background-color: #E1E8EE;
  height: 20rpx;
  width: 100%;
}
.conference_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  
}

.conference_list_item {
  display: flex;
  width: 100%;
  height: 106rpx;
}

.conference_icon {
  height: 106rpx;
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.conference_icon image{
  width: 55rpx;
  height: 55rpx;
}

.conference_item {
  height: 106rpx;
  width: 85%;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  border-bottom-color: #E6E6E6;
  border-bottom-style: solid;
  border-bottom-width: 2rpx;
}

.quit {
  color: #333333;
  background: #ffffff;
  width: 100%;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;

}

.quit text {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn_note {
  position: fixed;
  background: #1d93ec;
  top: 900rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  opacity: 0.5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn_note image {
  height: 55rpx;
  width: 55rpx;
}

.btn_photo {
  position: fixed;
  background: #1d93ec;
  top: 1020rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  opacity: 0.5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn_photo image {
  height: 55rpx;
  width: 55rpx;
}